<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/bkg1">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:id="@+id/start_button"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        android:onClick="startGame"
        android:visibility="visible"
        android:background="@drawable/mybutton" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:layout_below="@id/start_button"
        android:layout_alignParentLeft="true"

        android:text="Click in alphabetical order"
        android:textColor="#ffffff" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/raw_string"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:layout_marginTop="16dp"
        android:layout_below="@id/textView"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/b3"

        android:background="#ffffff"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/b7"
        android:layout_alignStart="@+id/b7"
        android:layout_marginTop="89dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/b4"
        android:background="#ffffff"
        android:layout_alignTop="@+id/b3"
        android:layout_toRightOf="@+id/b3"
        android:layout_toEndOf="@+id/b3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/b5"
        android:background="#ffffff"
        android:layout_alignTop="@+id/b7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/b6"
        android:background="#ffffff"
        android:layout_alignTop="@+id/b5"
        android:layout_toRightOf="@+id/b5"
        android:layout_toEndOf="@+id/b5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/b7"
        android:background="#ffffff"
        android:layout_below="@+id/b3"
        android:layout_toLeftOf="@+id/b8"
        android:layout_toStartOf="@+id/b8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/answer"
        android:layout_below="@id/b5"
        android:layout_alignParentLeft="true"

        android:layout_marginTop="16dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/b8"
        android:background="#ffffff"
        android:layout_below="@+id/b4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/b1"
        android:background="#ffffff"
        android:layout_above="@+id/b5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/b2"
        android:background="#ffffff"
        android:layout_alignTop="@+id/b1"
        android:layout_toRightOf="@+id/b5"
        android:layout_toEndOf="@+id/b5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/reset_button"
        android:onClick="resetClicked"
        android:layout_below="@id/answer"

        android:layout_marginTop="16dp"
        android:background="@drawable/mybutton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score : 0 "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/score_textView"
        android:layout_marginTop="16dp"
        android:layout_below="@id/reset_button"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:id="@+id/counter"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pass"
        android:id="@+id/pass"
        android:background="@drawable/mybutton"
        android:layout_alignTop="@+id/reset_button"
        android:layout_toRightOf="@+id/start_button"
        android:layout_toEndOf="@+id/start_button" />


</RelativeLayout>
